- content_for :title do
  = icon_for @person, :size => :medium
  %h1 
    Send Message
    = "to #{@person.display_name}" 
  = error_messages_for :message

.new.message.form
  - form_for :message, @message, :url => person_messages_path(@person) do |f|
    = render :partial => 'form', :locals => { :f => f }
    %p.submit
      = f.submit "Send"
