- content_for :title do
  .title-menu.toolbar
    = render :partial => 'menu'
  = icon_for @message.sender
  %h1
    Message from 
    = @message.sender.display_name
  .date
    %label Sent
    = friendly_date( @message.created_at )
  .subject
    %label Re
    = h @message.subject

.message.show
  .body
    = simple_format @message.body

- if current_user.may? :reply, @message
  .section.reply
    - form_for :message, Message.new, :url => person_messages_path(@message.sender) do |f|
      = render :partial => 'form', :locals => {:f => f }
      %p.submit
        = f.submit "Send Reply"
