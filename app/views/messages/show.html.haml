- content_for :title do
  .title-menu.toolbar
    = render :partial => 'menu'
  = icon_for @message.sender
  %h1
    - if @message.subject?
      = h @message.subject
    - else
      Message from 
      = @message.sender.display_name
  .date
    %label Sent
    = friendly_date( @message.created_at )

= render :partial => 'message', :locals => { :message => @message }
