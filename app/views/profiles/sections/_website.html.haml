.section
  %table
    %tr
      %td.label{ :valign => "top" }
        = _('Websites')
      %td.form
        %table
          %tbody#profile_websites
            - profile.websites.each_with_index do |website, index|
            = render :partial => 'website', :locals => { :website => website, :index => index }
            - end
        = add_row_link 'Add Websites'.t, 'add_website'
