<div class='sidesection'>
<!-- <div class='sidehead'>Navigation</div> -->

<div class='sidelink'>
<% if @is_contact -%>
<%= link_to 'remove from my contacts', {:controller => 'contact', :action => 'remove', :id => @user} %>
<% elsif logged_in? and !current_user.contacts.include?(@user) -%>
<%= link_to 'add to my contacts', url_for(:controller => 'contact', :action => 'add', :id => @user) %>
<% end -%>
</div>

<div class='sidelink'>
<%= link_to 'send message', {:controller => 'tool/message', :action => 'create', :to => @user.login}, :method => 'get' if @user%>
</div>

<div class='sidelink'>
  <%= link_to 'tasks', url_for_user(@user, :action => 'tasks') if @user %>
</div>

<div class='sidetail'></div>
</div>

