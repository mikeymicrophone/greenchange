<% @leftbar ||= 'issues/sidebar' -%>
<% inside_layout 'application' do -%>
<div id='maincolumn' class='leftbar' style="<%=sidebar_space%>">
  <%= sidebar %>
  <div id='content'>
  <div id='titlebox'>
    <% unless params[:action] == 'show' -%>
    <div id='breadcrumbs'><%= link_to_breadcrumbs %></div>
    <% end -%>
    <%= yield :title %>
  </div>
  <%= yield %>
  </div>
  <br clear='both' />
</div>
<% end -%>


