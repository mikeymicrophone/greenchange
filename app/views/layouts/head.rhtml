<html>
<head>
  <title><%= title_from_breadcrumbs %></title>
  <%= stylesheet_link_tag 'ui' %>
  <%= stylesheet_link_tag 'navigation' %>
  <%= stylesheet_link_tag 'main' %>
  <%= stylesheet_link_tag 'errors' %>
  <%= javascript_include_tag :defaults %>
  <!-- local scripts -->
  <script>
    <%= yield :script %>
  </script>  
  <!-- local styles -->
  <style>
    <%= yield :style %>
  </style>  
  <!--[if lt IE 7.]>
    <script defer type="text/javascript" src="/javascripts/pngfix.js"></script>
  <![endif]-->
</head>
<body class="<%=body_class||=''%>">

<div id="container">
  <div id="masthead" class="clearfix">
    <%= render 'layouts/masthead' %>
    <div id="topnav-outer"><div id="topnav" class="clearfix">
    <%= render 'layouts/menu' %>
    </div></div><!--end menu -->
  </div><!--end header -->
