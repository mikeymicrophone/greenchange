= render :partial => 'shared/sides/donate'
- if @group
  = render :partial => 'groups/sides/members'
  -#= render :partial => 'groups/sides/chat'
  = render :partial => 'groups/sides/media'
  = render :partial => 'groups/sides/tools'
  = render :partial => 'groups/sides/admin'

- if @issue
  = render :partial => 'issues/sides/groups'
  = render :partial => 'issues/sides/media'

- if @page
  = render :partial => 'pages/sides/contributors', :locals => { :page => @page }
  = render :partial => 'pages/sides/access', :locals => { :page => @page }
  = render :partial => 'pages/sides/tags', :locals => { :page => @page }
  -#= render :partial => 'pages/sides/issues', :locals => { :page => @page }
  -#= render :partial => 'pages/sides/groups', :locals => { :page => @page }
  = render :partial => 'pages/sides/assets', :locals => { :page => @page }

- if @person
  = render :partial => 'person/sides/tools'
  = render :partial => 'person/sides/contacts'
  = render :partial => 'person/sides/groups'
  = render :partial => 'person/sides/media'
  = render :partial => 'person/sides/top_pages'

- if @user and logged_in?
  = render :partial => 'me/sides/inbox'
  = render :partial => 'me/sides/invite'
  = render :partial => 'shared/groups',   :locals => { :source => @user }
  = render :partial => 'shared/contacts', :locals => { :source => @user }
  = render :partial => 'shared/issues',   :locals => { :source => @user }
  
