<% @profile = ( @user and @user.private_profile ) || ( @group and @group.public_profile )
<%= Formy.tabs('class' => 'left') do |f|
  f.tab do |t|
    t.label 'Settings'.t
    t.icon 'actions/settings.png'
    t.link( @user ? me_url(:action => 'edit') : url_for_group(@group, :action => 'edit') )
    t.selected params[:action] == 'edit' && params[:controller] == 'me'
  end
  f.tab do |t|
    t.label 'Profile'.t
    t.icon 'actions/profile-private.png'
    t.link url_for(:controller => 'profile', :action => 'edit', :id => @profile.id)
    t.selected params[:controller] == 'profile' && params[:id] == @profile.id.to_s
  end
end
%>

