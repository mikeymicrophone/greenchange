<% content_for :style do  %>
div.wikiedit {
  float: left;
  margin: 10px;
  margin-left: -20px;
}
div.wikiedit span {
  background: #C2D4FF;
  padding: 4px 16px;
  border: 1px solid #ADBDE3;
  border-left: 0;
}
div.wikiedit a {
  color: #669;
  font-weight: bold;
  text-decoration: none;
}
div.wikiedit a:hover {text-decoration: underline;}

<% end %>

<div class='wiki'>
  <%= @wiki.body_html %>
  <% if @wiki.editable_by? current_user -%>
    <div class='wikiedit'><span>
       <%= link_to '<u>e</u>dit', edit_blog_url(@page), :accesskey => 'e' %>
       &nbsp;
       <%= link_to 'versions', versions_blog_url(@page) %>
       &nbsp;
       <%= link_to 'last change', diff_blog_url(@page, :from => @wiki.version.to_i-1, :to => @wiki.version) if @wiki.version > 1 %>
    </span></div>
  <% end -%>
  <br style='clear: both' />
</div><!-- end wiki -->

