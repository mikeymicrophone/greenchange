.event.show.landing
  - event = @page.data
  %table.section{ :cellpadding => "4" }
    - if event.is_all_day
      %tr
        %td{ :align => "right" }
          %b
            = 'all day event on'.t
            \:
        %td
          = event_date_only(@page.starts_at,event.time_zone)
    - else
      %tr
        %td{ :align => "right" }
          %b
            = 'starts at'.t
            \:
        %td
          = event_full_time(@page.starts_at,event.time_zone)
      %tr
        %td{ :align => "right" }
          %b
            = 'ends at'.t
            \:
        %td
          = event_full_time(@page.ends_at,event.time_zone)
      %tr
        %td{ :align => "right" }
          %b
            = 'timezone'.t
            \:
        %td
          = event.time_zone

    %tr
      %td{ :align => "right" }
        %b
          = 'place'.t
          \:
      %td
        = h event.address1
        ,
        = h event.address2
        %br/
        = h event.city
        ,
        = h event.state
        = h event.postal_code
        %br/
        = h event.country
    %tr
      %td{ :align => "right" }
        %b
          = 'description'.t
          \:
      %td
        = event.description
    - if event.latitude and event.longitude
      - map = GoogleMap.new(:controls => [:zoom])
      - map.markers << GoogleMapMarker.new(:map => map, :lat => Float(event.latitude), :lng => Float(event.longitude), :html => @page.title )
      %tr
        %td
          = map.to_html
          #google_map
            = map.div
    %tr
      %td{ :align => "right" }
        %b
          = 'directions'.t
          \:
      %td
        = h event.directions


    - if logged_in?
      %tr
        %td
          = render :partial => 'participation'
