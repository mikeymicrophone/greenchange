.with-editor
  = new_tool_page title_for_new( "document" )
-#%h2
  = "Create a new".t
  %b= @page.class.class_display_name.t

-#form_for(:page, @page, :url => wikis_path) do |f|
  .workarea
    = header_for_page_create(@page.class)
    = render :partial => 'pages/form', :locals => {:f => f}
  .formbox
    - f.fields_for(:page_data, @data) do |data|
      = render :partial => 'form', :locals => {:f => data}
  = submit_tag 'Save', :name => 'save'
