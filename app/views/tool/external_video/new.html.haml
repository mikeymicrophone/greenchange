%h2
  = "Create a new".t
  %b= @page.class.class_display_name.t

- form_for(:page, @page, :url => videos_path) do |f|
  .workarea
    = header_for_page_create(@page.class)
    = render :partial => 'pages/form', :locals => {:f => f}
    - fields_for(:external_video, ExternalMedia::Youtube.new) do |video|
      = render :partial => 'form', :locals => {:f => video}
  = submit_tag 'Save', :name => 'save'
