<% if @parent -%>
  <% @group_type = 'committee'.t -%>
  <h1>New committee for group <%= @parent.name %></h1>
<% else %>
  <% @group_type = 'group'.t -%>
  <h1>New group</h1>
<% end %>

<div class='workarea'>

<% form_tag({:action => "create"},:id => "createform") do %>
  <%= render :partial => 'form' %>

  <%= submit_tag "Create" %>

<% end %>
<%= javascript_tag "Form.focusFirstElement('createform');" %>

</div> <!-- end work area -->


