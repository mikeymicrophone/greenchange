<h2><%= link_to image_tag('/images/actions/rss.png', :align => "right"), groups_url(:action => 'update_rss', :id => @group) %>News, Updates and Actions</h2>

<ul class='tab-block'>
	<li>
		<div class='tab-title'>Blogs & News</div>
		<ul class= 'tab-content list'>

<%= render :partial => 'pages/list/page', :collection => @group.pages.page_type(:news, :blog, :wiki, :action_alert) %>

		</ul>
	</li>	
	<li>
		<div class='tab-title'>Discussions</div>
		<ul class= 'tab-content list'>
			<%= render :partial => 'pages/list/discussion', :collection => @group.pages.page_type(:discussion) %>
		</ul>
	</li>
	<li>
		<div class='tab-title'>Events & Actions</div>
		<ul class= 'tab-content list'>
			<%= render :partial => 'pages/list/page', :collection => @group.pages.page_type(:action_alert, :event) %>
			<li></li>
		</ul>
	</li>
	<li>
		<div class='tab-title create'><%= link_to 'Create', {:controller => '/pages', :action => 'create', :group_id => @group.id} %></div>
	</li>
</ul>

