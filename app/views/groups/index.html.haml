- content_for :title do
  - if logged_in?
    .toolbar.title-menu
      .icon
        = link_to 'Create new group', new_group_path, :class => 'action new'
  %h1 
    - unless scoped_by_context?
      Groups
    - else
      - case scoped_by_context?
        - when @issue
          = "Groups for #{@issue.name}"
        - when @me
          Your groups
        - when @person
          = "Groups for #{@person.display_name}"
        - else
          Groups

- unless scoped_by_context?
  .section.search
    -form_tag('', :method => :get) do 
      =text_field_tag :query, h( params[:query])
      =submit_tag 'Search Groups'
.section
  .icon-box
    =render :partial => 'shared/list/group',  :collection =>@groups
  .clear

- groups_overlapping  =   current_user.groups & @groups
- if scoped_by_context? && ( scoped_by_context? != current_user ) && !groups_overlapping.empty?
  .section
    %h2 
      Groups you share
    .icon-box
      = render :partial => 'shared/list/group', :collection => groups_overlapping 
    .clear    

