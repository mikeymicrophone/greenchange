- if current_user.member_of? group
  .icon
    = link_to "Create Page", new_group_page_url(group), :class => 'action page-create add', :title => 'Add a Page'
  .icon
    = link_to "Join Chat", "chat_group_url( group )", :class => 'action chat' , :title => 'Join Chat'
  .icon
    = link_to "Leave", group_membership_url( group.membership_for current_user ), :method => :delete, :class => 'action delete', :title => 'Leave this Group'
  - if current_user.may? :admin, group
    .icon 
      =link_to "Invite new members", invite_group_membership_url(group) 
  
- else 
  .icon
    = link_to "Join", "new_group_membership_url( @group )", :class => 'action join-group add', :title => 'Join this group'

