<% if logged_in? -%>

<%= link_to_icon 'Create a new group', 'actions/plus.png', :action => 'create' %>

<h1>My groups</h1>
<div class='workarea' >
<% if current_user.groups %>
<%= render :partial => 'group', :collection => current_user.groups %>
<% else %>
<%=  'You have no groups'.t %>
<% end %>
<br class='clear' />
</div>

<h1 style='clear:both'>All groups</h1>
<div class='workarea'>
<%= render :partial => 'group', :collection => @groups %>
<br class='clear' />
</div>

<% else -%>

There are no public group profiles

<% end -%>
