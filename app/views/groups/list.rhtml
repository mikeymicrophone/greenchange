<%= link_to 'New group', :action => 'new' %>

<h1>My groups</h1>

<% current_user.groups.each do |g| %>
<%= link_to g.name, :controller => 'groups', :action => 'show', :id => g %>
<% end %>

<h1>All groups</h1>

<% for group in @groups %>
<%= link_to group.name, :action => 'show', :id => group %>
<% end %>

