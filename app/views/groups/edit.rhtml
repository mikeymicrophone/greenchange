<h1>Group profile</h1>

<% form_tag(:action => 'edit', :id => @group) do -%>
  <%= render :partial => 'form' %>  
  <%= submit_tag 'Save changes' %>
<% end -%>

<h1>Picture</h1>

<%= avatar_for @group, 'xlarge' %>

<p>uploaded image will be cropped and stretched to 96 pixels square.</p>

<p>
<% form_tag({:action => 'avatar', :id => @group}, {:multipart => true}) do -%>
  <%= file_field 'image', 'data' %>
  <%= submit_tag 'Upload' %>
<% end -%>
</p>

