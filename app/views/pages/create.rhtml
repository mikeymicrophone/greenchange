</table>

<div id='listing-of-page-classes' class='workarea'>
<% AVAILABLE_PAGE_CLASSES.each_with_index do |page_class,i| -%>
<div class="page-class"><div>
  <%= link_to "<b>#{page_class.class_display_name.t}</b>: #{page_class.class_description.t}",
    {:controller => 'tool/', :action => 'create',
      :group_id => params[:group_id]},
    {:style => "background: url(/images/pages/big/.png) no-repeat 0% 50%", :class => 'page-link'} %>
</div></div>
<% end -%>
</div>

