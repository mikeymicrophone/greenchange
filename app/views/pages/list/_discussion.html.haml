%li.list-item
  .list-thumb
    = link_to icon_for(discussion), page_url(discussion), :class => 'icon'
  .list-description
    %h3
      = link_to discussion.title, page_url(discussion) 
    %p
      = discussion.summary
    %ul.page-attachments
      
      - if discussion.discussion and !discussion.discussion.posts.empty?
        %li
          Last Post:
          = friendly_date( discussion.discussion.posts.max { |a, b| a.created_at <=> b.created_at }.created_at )
        %li
          Posts: 
          = discussion.discussion.posts.count
      - if discussion.discussion and !discussion.discussion.posts.empty?
        %li
          = "Participants: #{discussion.discussion.posts.map(&:user).uniq.size}"
      - unless discussion.tags.empty?
        %li
          Tags:
          = render :partial => 'shared/tag', :collection => discussion.tags
      -# unless discussion.issues.empty?
        %li
          Issues:
          -#= render :partial => 'shared/issue', :collection => discussion.issues

