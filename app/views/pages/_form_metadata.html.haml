.section
  %p
    = f.label 'tag_list', 'Tags'
    = f.text_field 'tag_list', :size => 30

  - if current_user.all_groups.any?
    %p
      = f.label 'group_id', 'Group'
      = f.select 'group_id', current_user.all_groups.map {|g| [g.name, g.id]}, :include_blank => true

.section.permissions
  %h4 Public for:
  .row
    = f.check_box :public
    = f.label :public, 'Viewing by general public'

    = f.check_box :public_participate
    = f.label :public_participate, 'Comments'

    = f.check_box :public_edit
    = f.label :public_edit, 'Editing by other users'
    
= render :partial => "shared/form/issues", :locals => {:f => f}

.section.uploads
  %h4 Uploads and Images
  - f.object.assets.each do |upload|
    = link_to ' ', upload.public_filename, html_options_for_icon_for(upload, :target => 'blank', :size => 'small' )
  - fields_for "page[assets][]", "" do |ff|

    %p
      = ff.label :uploaded_data, 'Upload file'
      = ff.file_field :uploaded_data
      = ff.label :uploaded_data, 'Pictures will be used in page and as page thumbnail. Additional files will be attached at the bottom of the page.' 


