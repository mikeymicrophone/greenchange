<div id="signup_container">

<div id="signup_left">
	<h2>Create Your Account</h2>
	Choose your user name and your password then click "Sign up". <Br><br>
</div>

<div id="signup_right">
<div id="signupform">
<%= error_messages_for :user %>
<% form_for :user do |f| -%>
<p><label for="login">Your login name </label><br/>
<%= f.text_field :login %></p>

<script>
  document.getElementById('user_login').focus();
</script>

<p><label for="password">Your Password</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Confirm Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<p><label for="email">Your Email</label><br/>
<%= f.text_field :email%>
<br />
<span class="comment"><%= _("Optional: used if you forget your password") %></span>
</p>

<p><%= submit_tag 'Sign up' %></p>

<%= hidden_field_tag 'redirect', params[:redirect] if params[:redirect] %>

<% end -%>
</div>
</div>
<br><br><br>

<div id="signup_footer"></div>

</div>


