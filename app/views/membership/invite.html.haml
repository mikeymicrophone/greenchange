%h2
  Invite users
%blockquote
  = error_messages_for :invitation
  - form_for :invitation, @invitation, :url => send_invitation_group_memberships_path(@group) do |f|
    %p
      = f.label :user_names, 'Enter a list of usernames, separated by spaces, of people you would like to invite to join this group:'
      = f.text_area :user_names, :rows => 2, :cols => 50
    %p
      = f.label :message, 'Optional message included with the invite:'
      = f.text_area :message, :rows => 2, :cols => 50
    %p.submit
      = f.submit 'Send invites'
