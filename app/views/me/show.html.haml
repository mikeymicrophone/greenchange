- content_for :title do
  .toolbar.title-menu
    = render :partial => 'menu'
  = icon_for( @me, :size=> 'large')
  %h1
    = @me.name
  .section.info
    - unless @me.inbox_items.empty?
      You have 
      = @me.inbox_items.size
      items in
      = link_to 'your inbox.', me_inbox_path
      .clear
    -unless @me.issues.empty?
      .issues.icon-only
        %label My issues:
        = render :partial => 'shared/icons/issue', :collection => @me.issues

.landing
  -#= render :partial => 'pages/shared/time_segmented_list', :locals => {:pages => @pages} 
  = render :partial => 'notifications/time_segmented_list', :locals => { :notifications => @me.notifications } 


