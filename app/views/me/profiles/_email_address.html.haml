- fields_target = email_address.new_record? ? "email_addresses[new][]" : :email_addresses
- fields_for fields_target, email_address do |ff|
  - index = email_address.try(:id) || ''
  .row
    -#%p
      -#= ff.check_box :preferred, { :index => index, :class => 'behavior-radio'}, 1
    %p
      = ff.select :email_type, ProfileHelper::EMAIL_TYPES.invert, {}, :index => index
    %p
      = ff.text_field :email_address, :size => 20, :maxlength => 100, :index => index 
      = ff.label "#{index}_email_address", 'Email'
    - unless email_address.new_record?
      .toolbar
        .icon
          = button_to 'Delete', me_profile_email_address_path(email_address), :method => :delete , :class => 'remote confirm delete action', :remote_url => formatted_me_profile_email_address_path(email_address, :xml )
