-content_for :title do
  .toolbar.title-menu
  = icon_for @me
  %h1 Edit My Profile

.profile.edit
  - form_for :profile, @profile, :url => { :action => :update }, :html => { :method => :put, :multipart => true }  do |f|
    = render :partial => 'form', :locals => { :f => f, :profile => @profile }
    %p.submit
      = f.submit 'Save Changes'.t, :name => 'update', :class => 'submit'
